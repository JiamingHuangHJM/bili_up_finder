<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilibili UP 主汇总 - Cyberpunk Edition</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap');
        
        html {
            scroll-behavior: smooth;
            scroll-padding-top: 80px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        ::selection {
            background: rgba(0, 255, 255, 0.3);
            color: #00ffff;
        }

        :root {
            --primary-color: #00ffff;
            --secondary-color: #ff00ff;
            --accent-color: #00ff00;
            --danger-color: #ff0066;
            --background-main: #0a0a0a;
            --background-secondary: #111111;
            --card-bg: rgba(20, 20, 20, 0.9);
            --text-primary: #ffffff;
            --text-secondary: #a0a0a0;
            --neon-glow: 0 0 20px rgba(0, 255, 255, 0.8);
            --border-color: rgba(0, 255, 255, 0.3);
        }

        body {
            font-family: 'Orbitron', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: var(--background-main);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        /* 背景网格效果 */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: -2;
            animation: grid-move 20s linear infinite;
        }

        @keyframes grid-move {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }

        /* 扫描线效果 */
        body::after {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                180deg,
                transparent 0%,
                rgba(0, 255, 255, 0.03) 50%,
                transparent 100%
            );
            background-size: 100% 4px;
            z-index: -1;
            pointer-events: none;
            animation: scan 8s linear infinite;
        }

        @keyframes scan {
            0% { transform: translateY(-100%); }
            100% { transform: translateY(100%); }
        }

        /* 导航栏 */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(10px) saturate(150%);
            -webkit-backdrop-filter: blur(10px) saturate(150%);
            border-bottom: 1px solid var(--border-color);
            z-index: 1000;
            padding: 0.8rem 0;
            transition: all 0.3s ease;
            box-shadow: 0 4px 30px rgba(0, 255, 255, 0.2);
        }

        .navbar-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar h1 {
            font-size: 1.8rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: var(--primary-color);
            text-shadow: var(--neon-glow);
            animation: neon-flicker 2s infinite alternate;
        }

        @keyframes neon-flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            list-style: none;
            align-items: center;
        }

        .nav-links a {
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            position: relative;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-links a::before {
            content: "";
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--primary-color);
            transition: width 0.3s ease;
            box-shadow: var(--neon-glow);
        }

        .nav-links a:hover {
            color: var(--primary-color);
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
        }

        .nav-links a:hover::before {
            width: 100%;
        }

        /* 下拉菜单 */
        .dropdown {
            position: relative;
        }

        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: 0;
            background: rgba(20, 20, 20, 0.98);
            border: 1px solid var(--border-color);
            border-radius: 0;
            box-shadow: 0 10px 30px rgba(0, 255, 255, 0.3);
            min-width: 200px;
            max-width: 300px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
            list-style: none;
            padding: 0.5rem 0;
            margin-top: 0.5rem;
            z-index: 1001;
            max-height: 400px;
            overflow-y: auto;
            clip-path: polygon(0 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%);
        }

        .dropdown:hover .dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-menu a {
            display: block;
            padding: 0.8rem 1.5rem;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.85rem;
            position: relative;
            overflow: hidden;
        }

        .dropdown-menu a::before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            width: 3px;
            height: 100%;
            background: var(--primary-color);
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .dropdown-menu a:hover {
            color: var(--primary-color);
            background: rgba(0, 255, 255, 0.1);
            padding-left: 2rem;
        }

        .dropdown-menu a:hover::before {
            transform: translateX(0);
        }

        /* 主容器 */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 5rem 2rem 3rem;
        }

        /* UP主网格布局 */
        .up-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        /* UP主卡片 */
        .up-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease-out forwards;
            clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 20px 100%, 0 calc(100% - 20px));
            transition: all 0.3s ease;
        }

        .up-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                var(--primary-color) 50%, 
                transparent 100%);
            animation: scan-line 3s linear infinite;
        }

        @keyframes scan-line {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .up-card:hover {
            border-color: var(--primary-color);
            box-shadow: 
                0 0 30px rgba(0, 255, 255, 0.5),
                inset 0 0 20px rgba(0, 255, 255, 0.1);
            transform: translateY(-5px);
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* UP主头部 */
        .up-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0, 255, 255, 0.2);
        }

        .up-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--secondary-color);
            text-shadow: 0 0 15px rgba(255, 0, 255, 0.8);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .up-profile-link {
            background: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            padding: 0.5rem 1.2rem;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .up-profile-link::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: var(--primary-color);
            transition: left 0.3s ease;
            z-index: -1;
        }

        .up-profile-link:hover {
            color: var(--background-main);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
        }

        .up-profile-link:hover::before {
            left: 0;
        }

        /* 视频数量标签 */
        .video-count {
            font-size: 0.85rem;
            color: var(--accent-color);
            margin-bottom: 1rem;
            text-shadow: 0 0 10px rgba(0, 255, 0, 0.6);
            font-weight: 500;
        }

        /* 视频列表 */
        .video-list {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            max-height: 400px;
            overflow-y: auto;
            padding-right: 0.5rem;
            transition: max-height 0.4s ease;
        }

        /* 视频项 */
        .video-item {
            display: flex;
            gap: 1rem;
            padding: 0.8rem;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(0, 255, 255, 0.2);
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            position: relative;
            overflow: hidden;
        }

        .video-item::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent 0%, rgba(0, 255, 255, 0.2) 50%, transparent 100%);
            transition: left 0.5s ease;
        }

        .video-item:hover {
            border-color: var(--primary-color);
            transform: translateX(5px);
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

        .video-item:hover::before {
            left: 100%;
        }

        .video-thumb-small {
            width: 100px;
            height: 56px;
            object-fit: cover;
            border: 1px solid var(--border-color);
            flex-shrink: 0;
            filter: saturate(0.8);
            transition: filter 0.3s ease;
        }

        .video-item:hover .video-thumb-small {
            filter: saturate(1.2);
        }

        .video-info-small {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-width: 0;
        }

        .video-title-small {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-primary);
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 0.2rem;
        }

        .watch-link {
            font-size: 0.8rem;
            color: var(--primary-color);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* 展开/收起按钮 */
        .expand-btn {
            width: 100%;
            padding: 0.8rem;
            margin-top: 1rem;
            background: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .expand-btn::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(0, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: all 0.5s ease;
        }

        .expand-btn:hover {
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
        }

        .expand-btn:hover::before {
            width: 100%;
            height: 100%;
        }

        .expand-btn::after {
            content: "▼";
            transition: transform 0.3s ease;
            margin-left: 0.5rem;
        }

        .expand-btn.expanded::after {
            transform: rotate(180deg);
        }

        /* 滚动条样式 */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(0, 255, 255, 0.1);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, var(--primary-color), var(--secondary-color));
            border: 1px solid rgba(0, 255, 255, 0.3);
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, var(--secondary-color), var(--primary-color));
        }

        /* 统计信息 */
        .stats-bar {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
        }

        .stats-bar::before {
            content: "";
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color), var(--accent-color));
            z-index: -1;
            opacity: 0.5;
            filter: blur(10px);
            animation: gradient-rotate 3s linear infinite;
        }

        @keyframes gradient-rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 900;
            color: var(--primary-color);
            text-shadow: 
                0 0 20px rgba(0, 255, 255, 0.8),
                0 0 40px rgba(0, 255, 255, 0.6),
                0 0 60px rgba(0, 255, 255, 0.4);
            animation: pulse-glow 2s ease-in-out infinite;
        }

        @keyframes pulse-glow {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        .stat-label {
            font-size: 1rem;
            color: var(--text-secondary);
            margin-top: 0.3rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* 搜索框 */
        .search-box {
            position: relative;
            margin-bottom: 2rem;
        }

        .search-input {
            width: 100%;
            padding: 1rem 3rem 1rem 1.5rem;
            border: 1px solid var(--border-color);
            background: rgba(0, 0, 0, 0.5);
            font-size: 1rem;
            color: var(--text-primary);
            transition: all 0.3s ease;
            font-family: inherit;
            letter-spacing: 1px;
        }

        .search-input::placeholder {
            color: var(--text-secondary);
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
            background: rgba(0, 0, 0, 0.8);
        }

        .search-icon {
            position: absolute;
            right: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            pointer-events: none;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
        }

        /* 响应式设计 */
        @media (max-width: 768px) {
            .up-grid {
                grid-template-columns: 1fr;
            }

            .navbar h1 {
                font-size: 1.3rem;
            }

            .video-thumb-small {
                width: 80px;
                height: 45px;
            }

            .container {
                padding: 4rem 1rem 2rem;
            }

            .dropdown-menu {
                right: -50px;
                min-width: 180px;
            }

            .nav-links {
                gap: 1rem;
            }

            .stat-number {
                font-size: 2.5rem;
            }
        }

        /* 加载动画 */
        @keyframes cyber-load {
            0% { 
                opacity: 0.3;
                transform: scale(0.95);
            }
            50% { 
                opacity: 1;
                transform: scale(1.05);
            }
            100% { 
                opacity: 0.3;
                transform: scale(0.95);
            }
        }

        .loading {
            animation: cyber-load 1.5s ease-in-out infinite;
        }

        /* Glitch效果 */
        @keyframes glitch {
            0%, 100% {
                text-shadow: 
                    0 0 20px rgba(0, 255, 255, 0.8),
                    2px 2px 0 rgba(255, 0, 255, 0.8),
                    -2px -2px 0 rgba(0, 255, 0, 0.8);
            }
            25% {
                text-shadow: 
                    0 0 20px rgba(0, 255, 255, 0.8),
                    -2px 2px 0 rgba(255, 0, 255, 0.8),
                    2px -2px 0 rgba(0, 255, 0, 0.8);
            }
            50% {
                text-shadow: 
                    0 0 20px rgba(0, 255, 255, 0.8),
                    2px -2px 0 rgba(255, 0, 255, 0.8),
                    -2px 2px 0 rgba(0, 255, 0, 0.8);
            }
        }

        .navbar h1:hover {
            animation: glitch 0.3s ease-in-out infinite;
        }
    </style>
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="navbar-content">
            <h1>BILIBILI UpHub</h1>
            <ul class="nav-links" id="navLinks">
                <li><a href="#stats">统计</a></li>
                <li><a href="#search">搜索</a></li>
                <li class="dropdown">
                    <a href="#uploaders" class="dropdown-toggle">UP主 <span style="font-size: 0.8em; margin-left: 0.2em;">▼</span></a>
                    <ul class="dropdown-menu" id="upDropdown"></ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- 主容器 -->
    <div class="container">
        <!-- 统计信息 -->
        <div class="stats-bar" id="stats">
            <div class="stat-item">
                <div class="stat-number" id="upCount">0</div>
                <div class="stat-label">UP主</div>
            </div>
        </div>

        <!-- 搜索框 -->
        <div class="search-box" id="search">
            <input type="text" class="search-input" id="searchInput" placeholder="搜索UP主或视频标题...">
            <span class="search-icon">⚡</span>
        </div>

        <!-- UP主网格 -->
        <div class="up-grid" id="uploaders"></div>
    </div>

    <script>
        // UP主数据
        const users_data = {{ user_data | tojson | safe }}; 

        // 全局变量
        let allVideos = [];
        let expandedStates = {};

        // 初始化展开状态
        users_data.forEach((user, index) => {
            expandedStates[index] = false;
        });

        // 渲染UP主卡片
        function renderUploaders() {
            const container = document.getElementById('uploaders');
            container.innerHTML = '';

            users_data.forEach((user, index) => {
                const card = document.createElement('div');
                card.className = 'up-card';
                card.id = `up-card-${index}`;
                card.style.animationDelay = `${index * 0.1}s`;

                const isExpanded = expandedStates[index];
                const displayVideos = isExpanded ? user.videos : user.videos.slice(0, 5);

                card.innerHTML = `
                    <div class="up-header">
                        <h2 class="up-name">${user.uploader}</h2>
                        <a href="${user.profile}" target="_blank" class="up-profile-link">访问主页</a>
                    </div>
                    <div class="video-count">Top ${user.videos.length} 视频</div>
                    <div class="video-list" id="video-list-${index}" style="max-height: ${isExpanded ? '1000px' : '400px'}">
                        ${displayVideos.map(video => `
                            <a href="${video.href}" target="_blank" class="video-item">
                                <img src="${video.thumb}" alt="${video.title}" class="video-thumb-small" loading="lazy">
                                <div class="video-info-small">
                                    <h3 class="video-title-small">${video.title}</h3>
                                    <span class="watch-link">立即观看 →</span>
                                </div>
                            </a>
                        `).join('')}
                    </div>
                    ${user.videos.length > 5 ? `
                        <button class="expand-btn ${isExpanded ? 'expanded' : ''}" id="expand-btn-${index}" onclick="toggleExpand(${index})">
                            ${isExpanded ? '收起视频' : `展开全部视频`}
                        </button>
                    ` : ''}
                `;

                container.appendChild(card);
            });
        }

        // 切换展开/收起状态
        function toggleExpand(index) {
            expandedStates[index] = !expandedStates[index];
            const isExpanded = expandedStates[index];
            const user = users_data[index];
            
            const videoList = document.getElementById(`video-list-${index}`);
            const expandBtn = document.getElementById(`expand-btn-${index}`);
            
            if (videoList && expandBtn) {
                if (isExpanded && videoList.children.length < user.videos.length) {
                    const currentVideos = videoList.children.length;
                    const newVideosHTML = user.videos.slice(currentVideos).map(video => `
                        <a href="${video.href}" target="_blank" class="video-item" style="opacity: 0">
                            <img src="${video.thumb}" alt="${video.title}" class="video-thumb-small" loading="lazy">
                            <div class="video-info-small">
                                <h3 class="video-title-small">${video.title}</h3>
                                <span class="watch-link">立即观看 →</span>
                            </div>
                        </a>
                    `).join('');
                    
                    videoList.insertAdjacentHTML('beforeend', newVideosHTML);
                    
                    setTimeout(() => {
                        const newItems = videoList.querySelectorAll('.video-item[style*="opacity: 0"]');
                        newItems.forEach((item, i) => {
                            setTimeout(() => {
                                item.style.transition = 'opacity 0.3s ease';
                                item.style.opacity = '1';
                            }, i * 50);
                        });
                    }, 10);
                }
                
                videoList.style.maxHeight = isExpanded ? '1000px' : '400px';
                
                if (!isExpanded) {
                    setTimeout(() => {
                        const allItems = Array.from(videoList.children);
                        allItems.slice(5).forEach(item => {
                            item.style.transition = 'opacity 0.2s ease';
                            item.style.opacity = '0';
                        });
                        
                        setTimeout(() => {
                            allItems.slice(5).forEach(item => item.remove());
                        }, 200);
                    }, 10);
                }
                
                expandBtn.classList.toggle('expanded');
                expandBtn.textContent = isExpanded ? '收起视频' : `展开全部 ${user.videos.length} 个视频`;
            }
        }

        // 渲染UP主下拉菜单
        function renderUpDropdown() {
            const dropdown = document.getElementById('upDropdown');
            dropdown.innerHTML = users_data.map((user, index) => `
                <li><a href="javascript:void(0)" onclick="scrollToUp(${index})">${user.uploader}</a></li>
            `).join('');
        }

        // 滚动到指定UP主
        function scrollToUp(index) {
            const card = document.getElementById(`up-card-${index}`);
            if (card) {
                const offset = card.offsetTop - 100;
                window.scrollTo({
                    top: offset,
                    behavior: 'smooth'
                });
                
                // 关闭下拉菜单
                const dropdown = document.querySelector('.dropdown-menu');
                if (dropdown) {
                    dropdown.style.opacity = '0';
                    dropdown.style.visibility = 'hidden';
                    setTimeout(() => {
                        dropdown.style = '';
                    }, 300);
                }
            }
        }

        // 更新统计信息
        function updateStats() {
            const upCount = users_data.length;
            document.getElementById('upCount').textContent = upCount;
        }

        // 搜索功能
        function initSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', (e) => {
                const query = e.target.value.toLowerCase();
                const cards = document.querySelectorAll('.up-card');

                cards.forEach((card, index) => {
                    const user = users_data[index];
                    const matchUploader = user.uploader.toLowerCase().includes(query);
                    const matchVideo = user.videos.some(video => 
                        video.title.toLowerCase().includes(query)
                    );

                    if (query === '' || matchUploader || matchVideo) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }

        // 滚动效果
        let lastScroll = 0;
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            const currentScroll = window.scrollY;
            
            if (currentScroll > 50) {
                navbar.style.background = 'rgba(10, 10, 10, 0.98)';
                navbar.style.boxShadow = '0 4px 30px rgba(0, 255, 255, 0.3)';
            } else {
                navbar.style.background = 'rgba(10, 10, 10, 0.95)';
                navbar.style.boxShadow = '0 4px 30px rgba(0, 255, 255, 0.2)';
            }
            
            if (currentScroll > lastScroll && currentScroll > 200) {
                navbar.style.transform = 'translateY(-100%)';
            } else {
                navbar.style.transform = 'translateY(0)';
            }
            
            lastScroll = currentScroll;
        });

        // 初始化
        document.addEventListener('DOMContentLoaded', () => {
            updateStats();
            renderUploaders();
            renderUpDropdown();
            initSearch();
        });

        // 防抖函数
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // 窗口调整大小时的处理
        window.addEventListener('resize', debounce(() => {
            // 可以在这里添加响应式处理逻辑
        }, 250));
    </script>
